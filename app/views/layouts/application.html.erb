<!DOCTYPE html>
<html>
<head>
  <title>TicTacToe</title>
  <link href="/assets/favicon.ico" rel="shortcut icon" type="icon">
  <%= stylesheet_link_tag    :application, media: :all %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="nav navbar navbar-default">
    <div class="container">
      <button class="navbar-toggle collapsed#hamburger" data-target=".navbar-collapse" data-toggle="collapse">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-header">
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag "hashtag.png", width: "20" %>
        <% end %>
      </div>
      <div class=" collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if current_user %>
            <li><%= link_to "Your Stats", user_path(current_user), id: "nav-link" %></li>
            <li><%= link_to "New Game!", games_path, id: "nav-link", method: :post %></li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_registration_path, id: "nav-link" %></li>
            <li><%= link_to "Sign In", new_user_session_path, id: "nav-link" %></li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><%= link_to "Sign Out", destroy_user_session_path, id: "nav-link", method: :delete %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <% if flash[:notice] %>
      <div class="alert alert-info" role="alert"><%= flash[:notice].html_safe %></div>
    <% end %>
    <% if flash[:error] %>
      <div class="alert alert-danger" role="alert"><%= flash[:error].html_safe %></div>
    <% end %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>